%section.category_post-post-section.my-4
  .container
    .row
      .col-12.col-md-8.col-lg-6
        %h1
          = @category_post.name
        .image-post
          = image_tag @category_post.file, class: "img-fluid"
        .categories
          - @categories.each do |category|
            = link_to category_path(category) do
              %span.badge.badge-primary
                = category.name
        %p
          = simple_format(@category_post.description)
      .col-12
        = link_to "Редактировать", edit_category_post_path(@category_post), class: "btn btn-warning", id: "editCategoryPost"
        = link_to "Удалить", category_post_path(@category_post), method: :delete, class: "btn btn-danger", id: "deleteCategoryPost", data: { confirm: 'Are you certain you want to delete this?' }

%section.comments-section
  .container
    .row
      .col-12
        #comments.mb-4
          = render partial: "comments/comments", locals: {commentable: @category_post}
        = render partial: "comments/form", locals: {commentable: @category_post}