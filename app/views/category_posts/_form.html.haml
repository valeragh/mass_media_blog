= simple_form_for @category_post do |f|
  = f.input :name, input_html: { placeholder: "Заголовок", class: "form-control"}, label: false
  = f.input :description, input_html: { placeholder: "Описание", class: "form-control", rows: "3"}, label: false
  = f.input :file, label: false
  = f.button :button, "Сохранить", class: "btn btn-success", id: "submitCategoryPost", data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Сохранение..."}